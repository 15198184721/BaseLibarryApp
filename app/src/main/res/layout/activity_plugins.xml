<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baselibarryapp.plugins.PluginsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/startPlugin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="启动插件Activity(不存在会触发下载操作)"/>
        <Button
            android:id="@+id/startPlugin1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="启动插件Service"/>
        <Button
            android:id="@+id/startPlugin2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="停止插件Service"/>
        <Button
            android:id="@+id/startPlugin3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发送插件广播"/>
        <Button
            android:id="@+id/startPlugin4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="动态加载插件Fragment"/>
        <Button
            android:id="@+id/startPlugin5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="静态Xml加载插件Fragment"/>

    </LinearLayout>

</ScrollView>
